# The syntax is "key = value". The whitespace around the
# equals doesn't matter.

font-family = "JetBrainsMono Nerd Font Mono"

theme = abc.conf

shell-integration-features = no-cursor
# cursor-style=bar
# cursor-style-blink=false

background-opacity = 0.95

window-decoration = false
window-theme = dark
# gtk-tabs-location = hidden
# gtk-wide-tabs = false

keybind=clear
keybind = ctrl+shift+comma=reload_config
keybind = ctrl+shift+c=copy_to_clipboard
keybind = ctrl+shift+v=paste_from_clipboard
keybind = ctrl+equal=increase_font_size:1
keybind = ctrl+minus=decrease_font_size:1
keybind = ctrl+alt+up=new_tab
keybind = ctrl+alt+right=next_tab
keybind = ctrl+alt+left=previous_tab
# keybind = ctrl+alt+up=toggle_tab_overview
keybind = ctrl+alt+down=close_surface
keybind = ctrl+shift+minus=new_split:down
keybind = ctrl+shift+equal=new_split:right
keybind = ctrl+shift+left=goto_split:left
keybind = ctrl+shift+right=goto_split:right
keybind = ctrl+shift+up=goto_split:top
keybind = ctrl+shift+down=goto_split:bottom
